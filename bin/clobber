#!/usr/bin/env bash

declare -i acnt=0

while true
  do if [ ! -f ./CMakeLists.txt ]
    then cd ..
  else
    break
  fi
done

[ -f Makefile ] && make clean

for afile in ./CMakeCache.txt ./CMakeFiles ./cmake_install.cmake ./Makefile ./gmon.out ./strace.out
  do if [ -f $afile -o -d $afile ] 
    then acnt+=1 

    rm -fvr -- $afile
  fi
done

exit 0
